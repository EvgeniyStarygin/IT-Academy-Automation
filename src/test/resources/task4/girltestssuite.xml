<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="GirlTests" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.itacademy.automation.task4.listeners.TestListener"></listener>
    </listeners>
    <test name="spendBoyFriendMoneyTest">
        <groups>
            <run>
                <include name="spendBoyFriendMoneyTestGroup"/>
            </run>
        </groups>
        <classes>
            <class name="com.itacademy.automation.task4.girltests.GirlTest"></class>
        </classes>
    </test>
    <test name="otherTests">
        <groups>
            <run>
                <exclude name="spendBoyFriendMoneyTestGroup"/>
            </run>
        </groups>
        <classes>
            <class name="com.itacademy.automation.task4.girltests.GirlTest"></class>
        </classes>
    </test>

</suite>